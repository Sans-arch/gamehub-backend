{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./@types/"],
    "noImplicitAny": false
  },
  "include": ["src/server.ts", "src/app/**/*.ts", "src/tests/**/*.ts"],
  "exclude": ["node_modules"]
}
